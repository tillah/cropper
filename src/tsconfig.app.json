{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "types": [],
    "paths": {
      "@angular/*": [
        "../node_modules/@angular/*"
      ],
        "core-js/es7/reflect": [
            "../node_modules/core-js/proposals/reflect-metadata"
        ],
        "core-js/es6/": [
            "./node_modules/core-js/es/"
        ]
    }
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
